.boxes {
  height: 100%;
  background-color: #fff;
  width: 884px;
  margin: auto;
}

.slick-dots {
  padding: 0;
  list-style: none;
  margin: auto;
  display: block;
  width: 122px;
  margin: 0;
  margin-top: 52px;
  padding-bottom: 40px;

  & li {
    float: left;
    padding-left: 37px;
    &:first-child {
      padding-left: 0;
    }
  }

  & li button {
    width: 16px;
    height: 16px;
    background-color: #d8d8d8;
    border-radius: 50%;
    font-size: 0;
    border: none;
  }

  & li.slick-active button{
    background-color: var(--main);
  }
}

